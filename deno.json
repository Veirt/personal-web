{
	"imports": {
		"lume/": "https://cdn.jsdelivr.net/gh/lumeland/lume@3.2.1/",
		"lume/jsx-runtime": "https://cdn.jsdelivr.net/gh/oscarotero/ssx@0.1.14/jsx-runtime.ts",
		"@unocss/preset-typography": "npm:@unocss/preset-typography@^66.6.0",
		"@unocss/preset-wind4": "npm:@unocss/preset-wind4@^66.6.0"
	},
	"tasks": {
		"lume": "deno run -A lume/cli.ts",
		"build": "deno task lume",
		"serve": "deno task lume -s"
	},
	"compilerOptions": {
		"types": ["lume/types.ts"],
		"jsx": "react-jsx",
		"jsxImportSource": "lume"
	},
	"unstable": ["temporal", "fmt-component"],
	"lint": {
		"rules": {
			"exclude": ["no-import-prefix"]
		},
		"plugins": ["https://cdn.jsdelivr.net/gh/lumeland/lume@3.2.1/lint.ts"]
	},
	"fmt": {
		"indentWidth": 4
	},
	"nodeModulesDir": "auto",
	"permissions": {
		"lume": {
			"read": true,
			"write": true,
			"import": [
				"cdn.jsdelivr.net:443",
				"jsr.io:443",
				"deno.land:443",
				"esm.sh:443"
			],
			"net": [
				"0.0.0.0",
				"jsr.io:443",
				"cdn.jsdelivr.net:443",
				"data.jsdelivr.com:443",
				"registry.npmjs.org:443"
			],
			"env": true,
			"run": true,
			"ffi": true,
			"sys": true
		}
	}
}
